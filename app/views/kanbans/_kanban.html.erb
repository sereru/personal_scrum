<li id="kanban-<%= kanban.id %>">
  <span class="content">
    <%= kanban.content %>
  </span>
  <div id="sime">締め切り</div>
  <span class = "deadline">
    <%= kanban.deadline %>
  </span>
  <div class="tag">
  <% kanban.tags.each do |tag| %>
    <span class= 'badge badge-primary'><%= tag.name %></span>
  <% end %>
  </div>
  <div class="con">
   <div><%= button_to 'before', kanbans_before_path, params: { id: kanban.id }, method: :post, class: "before" %></div>
    <div><%= button_to 'next', kanbans_next_path, params: { id: kanban.id }, method: :post, class: "next" %></div>
  </div>
  <span class = "delete">
  <%= link_to "delete", kanban, method: :delete, data: { confirm: "You sure?" } %>
  </span>
</li>